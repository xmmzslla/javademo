package ncs.test01;

public class ArrayTest {
	
	public static void main(String[] args) {
		
		int [][] array = {{12, 41, 36, 56, 21}, {82, 10, 12, 61, 45}, 
				         {14, 16, 18, 78, 65}, {45, 26, 72, 23, 34}};
		
		int sum;
		double average;
		
		for (int index = 0; index < array.length; index++) {
			System.out.printf("%8s", array[index]);
			sum = 0;
			for (int col = 0; col < array[index].length; col++) {
				System.out.printf("%4d", array[index][col]);
				sum = sum + array[index][col];
			}

			// average = sum 
			average = sum / (double) array[index].length;
			System.out.printf("%4d %.1f\n", sum, average);
		}
		
		
	}//m()

}//c
